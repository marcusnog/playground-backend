# Development Dockerfile
FROM node:20-alpine

# Install OpenSSL required by Prisma
RUN apk update && apk add --no-cache openssl

WORKDIR /app

# Copy package files and Prisma schema (needed for postinstall script)
COPY package*.json ./
COPY prisma ./prisma/

# Install dependencies (this will run postinstall which generates Prisma Client)
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Start in development mode
CMD ["npm", "run", "dev"]

